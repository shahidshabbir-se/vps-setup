alias gr="git remote"
alias gre="git reset"
alias gcs="function _gitclone() { git clone git@github.com:shahidshabbir-se/\$1.git; }; _gitclone"
alias gch="function _gch() { if [[ -n \$1 && \$1 =~ ^[0-9]+$ ]]; then git clone --depth \$1 \$2; else git clone \$1; fi; }; _gch"
